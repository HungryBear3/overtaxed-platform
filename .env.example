# Database (Supabase)
# Get these from: Supabase Dashboard → Settings → Database
# DATABASE_URL: Use Connection Pooler (port 6543) - for Vercel/production
# DIRECT_URL: Use Direct connection (port 5432) - for migrations
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-secret-key-here"

# Stripe. See docs/STRIPE_SETUP.md for products & prices.
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_COMPS_ONLY=""
STRIPE_PRICE_STARTER=""  # $149/property/year
STRIPE_PRICE_GROWTH_PER_PROPERTY=""  # $125/property/year (3-9 properties)
STRIPE_PRICE_PORTFOLIO_PER_PROPERTY=""  # $100/property/year (10-20 properties)

# Email (SendGrid, Postmark, or AWS SES). See docs/EMAIL_SETUP.md.
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
SMTP_FROM="noreply@overtaxed.com"

# Cook County Open Data (for comps)
COOK_COUNTY_DATA_BASE_URL="https://datacatalog.cookcountyil.gov"

# AWS S3 (for document storage)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="overtaxed-documents"

# Sentry (optional, for error tracking)
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron secret (optional, for securing /api/cron/* endpoints)
CRON_SECRET=""
